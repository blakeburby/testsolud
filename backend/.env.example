# Kalshi API Credentials - NEVER commit the real values
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_PRIVATE_KEY_PATH=./keys/kalshi_private_key.pem

# Kalshi API Settings
KALSHI_API_BASE_URL=https://api.elections.kalshi.com/trade-api/v2
KALSHI_DEMO_MODE=false

# Supabase (optional - for trade logging)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your_supabase_anon_key_here

# Trading Parameters - START WITH DRY RUN MODE!
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=500
MAX_CONCURRENT_POSITIONS=5
DRY_RUN_MODE=true

# Risk Management
CIRCUIT_BREAKER_LOSS_THRESHOLD=0.20
CIRCUIT_BREAKER_DRAWDOWN_THRESHOLD=0.15
MIN_EDGE_THRESHOLD=0.02
UNCERTAINTY_BUFFER=0.03

# Strategy Configuration
ENABLED_STRATEGIES='["high_confidence_threshold"]'
DEFAULT_BANKROLL=10000

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=production

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_DELAY=5

# Monitoring
ENABLE_PERFORMANCE_METRICS=true
METRICS_EXPORT_INTERVAL=60
